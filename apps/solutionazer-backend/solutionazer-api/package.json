{
  "name": "@solutionazer-app/api",
  "private": true,
  "version": "0.0.1",
  "description": "",
  "author": "David Llamas Rom√°n",
  "license": "GPL-3.0-only",
  "scripts": {
    "dev:up": "COMPOSE_PROJECT_NAME=solutionazer-dev docker compose --env-file ../../../.env up -d",
    "dev:down": "COMPOSE_PROJECT_NAME=solutionazer-dev docker compose --env-file ../../../.env down",
    "stag:up": "COMPOSE_PROJECT_NAME=solutionazer-stag docker compose --env-file ../../../.stag.env up -d",
    "stag:down": "COMPOSE_PROJECT_NAME=solutionazer-stag docker compose --env-file ../../../.stag.env down",
    "prod:up": "COMPOSE_PROJECT_NAME=solutionazer-prod docker compose --env-file ../../../.prod.env up -d",
    "prod:down": "COMPOSE_PROJECT_NAME=solutionazer-prod docker compose --env-file ../../../.prod.env down",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm:dev": "typeorm-ts-node-commonjs -d src/database/data-source.dev.ts",
    "migrations:generate:dev": "npm run typeorm:dev -- migration:generate",
    "migrations:run:dev": "npm run typeorm:dev -- migration:run",
    "migrations:revert:dev": "npm run typeorm:dev -d ./typeorm.data-source.dev.ts -- migration:revert",
    "migrations:show:dev": "npm run typeorm:dev -- migration:show",
    "migrations:drop:dev": "npm run typeorm:dev -- schema:drop",
    "typeorm:stag": "typeorm-ts-node-commonjs -d src/database/data-source.stag.ts",
    "migrations:generate:stag": "npm run typeorm:stag -- migration:generate",
    "migrations:run:stag": "npm run typeorm:stag -- migration:run",
    "migrations:revert:stag": "npm run typeorm:stag -d ./typeorm.data-source.stag.ts -- migration:revert",
    "migrations:show:stag": "npm run typeorm:stag -- migration:show",
    "migrations:drop:stag": "npm run typeorm:stag -- schema:drop",
    "typeorm:prod": "typeorm-ts-node-commonjs -d src/database/data-source.prod.ts",
    "migrations:generate:prod": "npm run typeorm:prod -- migration:generate",
    "migrations:run:prod": "npm run typeorm:prod -- migration:run",
    "migrations:revert:prod": "npm run typeorm:prod -d ./typeorm.data-source.prod.ts -- migration:revert",
    "migrations:show:prod": "npm run typeorm:prod -- migration:show",
    "migrations:drop:prod": "npm run typeorm:prod -- schema:drop"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.20",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.20",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.20",
    "@nestjs/typeorm": "^11.0.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "joi": "^17.13.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.15.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.22"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@nestjs/cli": "^11.0.6",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.0.20",
    "@swc/cli": "^0.7.3",
    "@swc/core": "^1.11.21",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
